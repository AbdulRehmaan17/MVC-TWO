@{
}
@model ProjectX.Models.Student;
<h1>Edit Students</h1>
@if (Model == null)
{
    <p>No student is present with this ID</p>
}
@if (Model != null)
{
    <form method="post" id="update-student-form">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="hidden" class="form-control" asp-for=Id readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for=Name />
        </div>

        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" asp-for=Email />
        </div>

        <div class="mt-3">
            <label class="form-label">Phone</label>
            <input type="text" class="form-control" asp-for=Phone />
        </div>
        <div class="mt-3">
            <button type="Submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}
